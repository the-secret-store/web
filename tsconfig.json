{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@components": ["src/components"],
      "@pages": ["src/pages"],
      "@utils": ["src/utils"],
      "@hooks": ["src/hooks"],
      "@root": ["src/root"],
      "@services": ["src/services"],
      "@api": ["src/api"],

      // sub folders
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@utils/*": ["src/utils/*"],
      "@hooks/*": ["src/hooks/*"],
      "@root/*": ["src/root/*"],
      "@services/*": ["src/services/*"],
      "@api/*": ["src/api/*"]
    }
  },
  "include": ["./src"]
}
